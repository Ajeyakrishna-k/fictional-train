<%- include('partials/header') %>
<%- include('partials/modals') %>
<%- include('partials/images') %>
<link rel="stylesheet" href="/css/plp.css">


<div class="container-fluid mt-5 mb-5">
    <div class="row g-2">
        <div class="col-md-3">
            <div class="t-products p-2">
                <h6 class="text-uppercase ">Categories</h6>
                <div class="p-lists">
                    <div class="d-flex justify-content-between ">  <a class="nav-link product-type-text" href="/products/games">Games</a> </div>
                                        <div class="d-flex justify-content-between mt-2"> <a class="nav-link product-type-text" href="/products/apps">Apps</a>
                                        </div>
                </div>
            </div>
            
            <div class=" p-2">
                
            </div>
            <div class=" p-2 mb-2">
                
            </div>
        </div>
        <div class="col-md-9">
            <div class="row g-2">
                
                <% if(!availableProducts.length == 0){
                availableProducts.forEach(function(product){ %>
                <div class="col-md-4">
                    <div class="product py-4">
                        <div class="text-center image-block"> <img width=100% src=<%=product.productImageUrl %> > </div>
                        <div class="about text-center">
                            <h5><%=product.productName %></h5> 
                            <a class="text-center btn btn-primary" href=<%=product.productUrl %> >Launch</a>
                        </div>
           
                    </div>
                </div>
                   
                <% })
                }   else{%>
                    <h3 class="text-center">NO PRODUCTS TO SHOW!</h3> 
                <% } %>    

                
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
